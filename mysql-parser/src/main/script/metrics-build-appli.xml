<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE project [
	<!ENTITY classpath SYSTEM "file:./scripts/classpath.xml">
<!ENTITY jarservices SYSTEM "file:./scripts/jarservices.xml">
<!ENTITY properties SYSTEM "file:./scripts/properties.xml">
